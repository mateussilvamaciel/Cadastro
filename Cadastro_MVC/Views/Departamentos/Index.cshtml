@model IEnumerable<Cadastro_MVC.Departamento>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="wrapper">
    <div class="row">
        <div class="col-md-12">
            <div class="content-panel" style="padding:20px">
                <h2>Lista de Departamentos</h2>
                <p>
                    @Html.ActionLink("Novo", "Create", null, new { @class = "btn btn-primary" })
                </p>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Descricao)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descricao)
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-default" }) |
                                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-default" }) |
                                @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "btn btn-default" })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</section>